<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:padding="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元新康复中心(鼓东一号)"
            android:layout_centerVertical="true"
            android:textSize="@dimen/font_16"
            android:textColor="@color/black"
            android:textStyle="bold"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="待审核"
            android:textSize="@dimen/font_15"
            android:textColor="@color/gray_pressed"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/dashline"
        android:layerType="software"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        >
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_item_horizontal_height">

            <TextView
                android:text="张三"
                style="@style/cardview_item_text" />
            <TextView
                android:text="远程康复"
                android:layout_alignParentRight="true"
                style="@style/cardview_item_text" />

        </RelativeLayout>

        <include layout="@layout/line_1dp_2"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_item_horizontal_height">

            <TextView
                android:id="@+id/card_item_time_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务时间:"
                android:textSize="@dimen/font_16"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_toRightOf="@id/card_item_time_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2020.12.12  12:12"
                android:textSize="@dimen/font_16"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <include layout="@layout/line_1dp_2"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_item_horizontal_height">

            <TextView
                android:id="@+id/card_item_address_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务地址:"
                android:textSize="@dimen/font_16"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_toRightOf="@id/card_item_address_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="鼓楼区鼓东路与东亚路交叉口"
                android:textSize="@dimen/font_16"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <include layout="@layout/line_1dp_2"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_item_horizontal_height">

            <TextView
                android:id="@+id/card_item_require_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="康复需求:"
                android:textSize="@dimen/font_16"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_toRightOf="@id/card_item_require_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="腰疼"
                android:textSize="@dimen/font_16"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <include layout="@layout/line_1dp_2"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:padding="5dp"
                android:background="@color/wechat_login_button">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/cancel_order"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_16"
                    />

            </LinearLayout>

        </RelativeLayout>

        
    </LinearLayout>
    





</LinearLayout>
