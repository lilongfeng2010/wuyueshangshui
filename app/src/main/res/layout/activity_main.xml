<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wuyueshangshui.yuanxinkangfu.mainactivity.MainActivity">

    <FrameLayout
        android:id="@+id/activity_main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <include layout="@layout/line_1dp"/>

    <RadioGroup
        android:id="@+id/main_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/main_icon_1"
            android:text="首页"
            android:textStyle="bold"
            android:drawableTop="@drawable/botton1_icon"
            style="@style/radiobutton" />

        <RadioButton
            android:id="@+id/main_icon_3"
            android:text="预约"
            android:textStyle="bold"
            android:drawableTop="@drawable/botton3_icon"
            style="@style/radiobutton" />

        <RadioButton
            android:id="@+id/main_icon_5"
            android:text="我"
            android:textStyle="bold"
            android:drawableTop="@drawable/botton5_icon"
            style="@style/radiobutton" />
    </RadioGroup>

</LinearLayout>
